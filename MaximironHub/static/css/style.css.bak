:root{
  --bg-dark: #06131a;
  --panel-dark: rgba(5,10,12,0.6);
  --neon: #0fe6e6;
  --neon2: #22c6ff;
  --accent: #9a6bff;
  --glass: rgba(255,255,255,0.03);
  --text: #dff;
  --muted: #7fa3a6;
  --radius: 14px;
}
[data-theme='light']{
  --bg-dark: #f6f8fb;
  --panel-dark: rgba(255,255,255,0.9);
  --neon: #0b6bff;
  --neon2: #7ae1ff;
  --accent: #6b4bff;
  --text: #0b1b22;
  --muted: #6b6b6b;
}
*{box-sizing:border-box}
body{
  margin:0;
  background: radial-gradient(900px 300px at 10% 10%, rgba(34,198,255,0.03), transparent), var(--bg-dark);
  color:var(--text);
  font-family: Inter, Roboto, Arial, sans-serif;
  -webkit-font-smoothing:antialiased;
  min-height:100vh;
}
.container{max-width:1200px;margin:30px auto;padding:0 20px}
.site-header{display:flex;justify-content:space-between;align-items:center;padding:18px 0}
.brand{display:flex;align-items:center;gap:14px}
.site-logo{width:56px;height:56px;border-radius:10px;object-fit:cover;box-shadow:0 0 10px #00eaff,0 0 20px #00eaff;border:2px solid rgba(15,230,230,0.06)}
h1{margin:0;font-size:32px;color:var(--neon2);letter-spacing:2px}
.btn{background:transparent;border:0;padding:10px 14px;border-radius:10px;cursor:pointer;font-weight:600;color:var(--text);transition:all .18s}
.btn.primary{background:linear-gradient(90deg,var(--neon),var(--neon2));color:#021;box-shadow:0 0 10px #00eaff,0 0 20px #00eaff;}
.btn.outline{border:1px solid rgba(255,255,255,0.06);backdrop-filter:blur(6px)}
.btn.ghost{background:transparent;border:1px solid rgba(255,255,255,0.06)}
.btn.sm{padding:6px 10px;font-size:13px;border-radius:8px}
.neon-card{background:linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));padding:18px;border-radius:var(--radius);border:1px solid rgba(15,230,230,0.04);box-shadow:0 0 10px #00eaff,0 0 20px #00eaff;flex-direction:column;align-items:center;gap:10px}
.row{display:flex;gap:12px;align-items:center;width:100%}
.file-label{display:inline-block;background:transparent;border:1px dashed rgba(255,255,255,0.06);padding:10px 16px;border-radius:12px;cursor:pointer}
.file-label input{display:none}
.title-input{flex:1;padding:10px;border-radius:8px;border:1px solid rgba(255,255,255,0.04);background:transparent;color:var(--text)}
.hint{color:var(--muted);font-size:13px}
.gallery{display:grid;grid-template-columns:repeat(auto-fill,minmax(220px,1fr));gap:22px;margin-top:28px}
.card{background:linear-gradient(180deg, rgba(255,255,255,0.01), rgba(255,255,255,0.005));border-radius:12px;padding:12px;border:1px solid rgba(255,255,255,0.03);transition:transform .2s, box-shadow .2s;transform-style:preserve-3d;perspective:1000px}
.card .media-wrap{height:160px;border-radius:8px;overflow:hidden;display:flex;align-items:center;justify-content:center;background:linear-gradient(180deg,rgba(2,8,10,0.4),rgba(2,8,10,0.6))}
.card img{width:100%;height:100%;object-fit:cover;display:block}
.video-thumb{font-size:46px;opacity:0.85}
.card .meta{display:flex;justify-content:space-between;align-items:center;margin-top:10px;gap:10px}
.card:hover{transform:translateY(-8px);box-shadow:0 0 10px #00eaff,0 0 20px #00eaff;}
.card.tilt{will-change:transform}
.fname{font-size:13px;color:var(--muted);overflow:hidden;text-overflow:ellipsis;white-space:nowrap;max-width:60%}
.actions{display:flex;gap:8px;justify-content:flex-end}
.modal{position:fixed;inset:0;display:none;align-items:center;justify-content:center;background:rgba(0,0,0,0.6);backdrop-filter:blur(4px);z-index:9999;padding:20px}
.modal.open{display:flex}
.modal-card{width:92%;max-width:1100px;background:linear-gradient(180deg, rgba(2,8,10,0.95), rgba(2,8,10,0.99));padding:18px;border-radius:12px;position:relative;box-shadow:0 0 10px #00eaff,0 0 20px #00eaff;box-shadow:0 0 10px #00eaff,0 0 20px #00eaff;right:12px;top:12px;background:transparent;border:0;font-size:20px;color:var(--neon);cursor:pointer}
.modal-content{min-height:60vh;display:flex;align-items:center;justify-content:center}
video{max-width:100%;max-height:80vh;height:auto;border-radius:8px;background:#000;display:block}
img.modal-img{max-width:100%;max-height:80vh;border-radius:8px}
/* neon accents */
.neon-glow{box-shadow:0 0 10px #00eaff,0 0 20px #00eaff;text-align:center;color:var(--muted);}
@media (max-width:800px){.gallery{grid-template-columns:repeat(auto-fill,minmax(160px,1fr))}.card .media-wrap{height:140px}.row{flex-direction:column;align-items:stretch}}


.user-block{padding:6px 10px;border-radius:8px;background:linear-gradient(90deg, rgba(15,230,230,0.04), rgba(34,198,255,0.02));border:1px solid rgba(15,230,230,0.06);box-shadow:0 0 10px #00eaff,0 0 20px #00eaff;}
.error{color:#ff8080;background:rgba(255,0,0,0.03);padding:8px;border-radius:8px;margin-bottom:8px;border:1px solid rgba(255,0,0,0.06);}
.particle-canvas{position:fixed;left:0;top:0;width:100%;height:100%;z-index:0;pointer-events:none;}
.container{position:relative;z-index:2;}
.site-header, .neon-card, .modal-card{z-index:3;}



/* Banner logo styling (Variant A) */
.banner-brand{display:flex;flex-direction:column;align-items:center;gap:8px;width:100%;}
.site-banner{width:640px;max-width:86%;height:auto;border-radius:12px;box-shadow:0 0 10px #00eaff,0 0 20px #00eaff;border:2px solid rgba(15,230,230,0.08);transform:translateY(6px);transition:transform .28s, box-shadow .28s;}
.site-banner:hover{transform:translateY(0px) scale(1.02);box-shadow:0 0 10px #00eaff,0 0 20px #00eaff;}

/* make particles brighter and foreground glow */
.particle-canvas{mix-blend-mode:screen;opacity:0.98;filter:blur(0.2px);}
/* stronger neon accents */
.neon-card{border:1px solid rgba(15,230,230,0.08);box-shadow:0 0 10px #00eaff,0 0 20px #00eaff;letter-spacing:0.6px}


.banner-container{width:100%;display:flex;justify-content:center;margin-top:20px;}
.banner-container .site-banner{width:70%;max-width:900px;border-radius:14px;box-shadow:0 0 10px #00eaff,0 0 20px #00eaff;}

.neon-title{
  font-size:42px;
  font-weight:800;
  letter-spacing:2px;
  color:#36e9ff;
  text-shadow:0 0 8px #36e9ff,0 0 16px #1cd3ff,0 0 32px #0bbbe6;
  padding:8px 0;
}

/* Neon waves behind title */
.neon-title{
  position:relative;
  overflow:visible;
}
.neon-title::after{
  content:"";
  position:absolute;
  left:50%;top:50%;
  width:260%;height:260%;
  transform:translate(-50%,-50%);
  background:radial-gradient(circle,#00eaff22 0%,#00eaff00 70%);
  filter:blur(90px);
  pointer-events:none;
  animation:wave 6s infinite ease-in-out;
}
@keyframes wave{
  0%{transform:translate(-50%,-50%) scale(1);}
  50%{transform:translate(-50%,-50%) scale(1.14);}
  100%{transform:translate(-50%,-50%) scale(1);}
}

/* Neon tail cursor */
body{cursor:none;}
#cursorGlow{
  position:fixed;
  width:11px;height:11px;
  border-radius:50%;
  background:#00eaff;
  box-shadow:0 0 10px #00eaff,0 0 20px #00eaff;
  pointer-events:none;
  mix-blend-mode:screen;
  z-index:9999;
}

/* Neon rain */
.neon-rain{
  position:fixed;left:0;top:0;width:100%;height:100%;
  pointer-events:none;z-index:-1;opacity:0.18;
  background-image:linear-gradient(180deg,rgba(0,255,255,0.12) 0%,rgba(0,255,255,0) 60%);
  animation:rain 2s linear infinite;
}
@keyframes rain{0%{background-position:0 -100%;}100%{background-position:0 200%;}}

/* Shader noise */
.shader-noise{
  position:fixed;left:0;top:0;width:100%;height:100%;
  background:url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAAB...') repeat;
  mix-blend-mode:overlay;opacity:0.04;pointer-events:none;z-index:-2;
}

/* Blur on hover cards */
.neon-card:hover{}

/* Particles avoid title */
.neon-title{z-index:10;position:relative;}
